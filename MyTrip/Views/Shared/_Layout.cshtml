@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link href="~/css/DefaultLayoutStyleSheet.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-light border-bottom">
            <div class="container">                   
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserHome" asp-action="UserHomeScreen">MyTrip</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserHome" asp-action="UserHomeScreen">Home</a>
                    </li>
                    <li class="nav-item">
                        <!--TODO: Need to update asp-action and text when nav bar 2 is chosen-->
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserHome" asp-action="InviteAttendee">Invite Attendees</a>
                    </li>
                    <li class="nav-item">
                        <!--TODO: Need to update asp-action and text when nav bar 3 is chosen-->
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserHome" asp-action="UPDATEWHENDECIDED">Add Trip</a>
                    </li>
                    <li class="nav-item">
                        <!--TODO: Need to update asp-action and text when nav bar 3 is chosen-->
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserHome" asp-action="UPDATEWHENDECIDED">Current Trips</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserHome" asp-action="ContactUs">Contact Us!</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserHome" asp-action="UserLogInScreen">Log Out</a>
                    </li>
                </ul>
            </div>
            
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>
